{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true
	},
	"include": ["app/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
